{
  "name": "multi-ai-translator",
  "version": "0.1.2",
  "description": "Browser extension for translating web pages using multiple AI providers",
  "type": "module",
  "scripts": {
    "sync:version": "node scripts/sync-manifest-version.js",
    "sync:version:chrome": "node scripts/sync-manifest-version.js chrome",
    "sync:version:firefox": "node scripts/sync-manifest-version.js firefox",
    "dev": "vite build --config vite.config.ts --watch",
    "dev:firefox": "vite build --config vite.firefox.config.ts --watch",
    "build": "yarn build:chrome && yarn build:firefox",
    "build:chrome": "yarn sync:version:chrome && vite build --config vite.config.ts",
    "build:firefox": "yarn sync:version:firefox && vite build --config vite.firefox.config.ts",
    "clean": "gulp clean",
    "lint": "gulp lint",
    "format": "prettier --write \"src/**/*.{ts,js,css,json}\"",
    "package": "node scripts/package.js",
    "release": "yarn clean && yarn format && yarn lint && yarn build && yarn package"
  },
  "keywords": [
    "chrome-extension",
    "edge-extension",
    "firefox-addon",
    "translation",
    "ai",
    "llm",
    "openai",
    "anthropic",
    "gemini",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.39.1",
    "@prantlf/gulp-jsonlint": "^3.0.1",
    "@types/chrome": "^0.1.30",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "archiver": "^7.0.1",
    "cross-env": "^10.1.0",
    "del": "^8.0.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "gulp": "^5.0.1",
    "gulp-eslint-new": "^2.5.0",
    "gulp-stylelint-esm": "^3.0.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-static-copy": "^3.1.4",
    "webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.69.0",
    "@google/genai": "^1.30.0",
    "ollama": "^0.6.3",
    "openai": "^6.9.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
