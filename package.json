{
  "name": "multi-ai-translator",
  "version": "1.0.0",
  "description": "Browser extension for translating web pages using multiple AI providers",
  "type": "module",
  "packageManager": "yarn@4.0.0",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "package": "node scripts/package.js"
  },
  "keywords": [
    "chrome-extension",
    "edge-extension",
    "translation",
    "ai",
    "llm",
    "openai",
    "claude",
    "gemini",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "archiver": "^7.0.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@google/generative-ai": "^0.17.1",
    "ollama": "^0.5.8",
    "openai": "^4.57.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
